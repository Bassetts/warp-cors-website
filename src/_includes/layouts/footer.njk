<footer class="py-6 bg-gray-900 text-white">
  <div class="max-w-6xl mx-auto">
    <div class="pt-8 flex justify-center">
      {% for logo in metadata.footer.logos %}
      <a href="{{ logo.link }}"
        ><img
          src="{{ logo.img }}"
          alt="{{ logo.alt }}"
          title="{{ logo.title }}"
          class="mx-4"
          width="40px"
      /></a>
      {% endfor %}
    </div>
    <div class="pt-8 text-center text-xl font-medium">
      <p>
        Created with <span role="img" aria-label="love">&#x2764;</span> by
        {{ metadata.author }}. Have an issue?
        <a class="text-saffron-500" href="{{ metadata.repository }}/issues/new"
          >Report it!</a
        >
      </p>
    </div>
  </div>
</footer>
