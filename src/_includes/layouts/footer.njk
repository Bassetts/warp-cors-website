<footer class="py-6 px-4 bg-gray-900 text-white">
  <div class="max-w-6xl mx-auto">
    <div class="pt-8 flex justify-center">
      {% for logo in metadata.footer.logos %}
      <a href="{{ logo.link }}"
        ><img
          src="{{ logo.img }}"
          alt="{{ logo.alt }}"
          title="{{ logo.title }}"
          class="mx-4"
          width="40px"
      /></a>
      {% endfor %}
    </div>
    <div class="pt-8 text-center text-xl font-medium">
      <p>
        Have an issue?
        <a class="text-saffron-500" href="{{ metadata.repository }}/issues/new"
          >Report it!</a
        >
      </p>
      <p>
        Created with
        <span
          class="text-red-500 text-3xl leading-none align-bottom"
          role="img"
          aria-label="love"
          >&#x2665;</span
        >
        by {{ metadata.author }}.
      </p>
    </div>
  </div>
</footer>
